{
  "name": "@react-utilities/root",
  "version": "0.0.1",
  "description": "Everyday components for speeding up React development with little or no extra boilerplate code",
  "main": "index.ts",
  "repository": "git@github.com:yowainwright/react-utilities.git",
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna exec --no-bail --stream yarn build",
    "ci": "run-s lint:ci tsc test:ci",
    "clean": "lerna clean",
    "deploy": "lerna publish from-package --ignore-scripts",
    "deploy:all": "lerna publish --ignore-scripts",
    "lint": "yarn lint:cmd --fix",
    "lint:ci": "yarn lint:cmd",
    "lint:cmd": "eslint . --ext '.ts,.tsx,.js,.json,.md,.snap' --cache",
    "test": "yarn test:cmd && yarn tsc",
    "test:ci": "yarn test:cmd --ci && yarn tsc",
    "test:cmd": "jest",
    "tsc": "tsc -p ./tsconfig.test.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^10.0.0",
    "@commitlint/prompt": "^11.0.0",
    "@heartly/eslint-config-typescript": "^0.0.2",
    "@heartly/prettier-config": "^0.0.1",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.14",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^16.8.5",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "enzyme": "^3.10.0",
    "eslint": "^7.16.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lerna": "^3.14.1",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.9.0",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.0"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^16.8.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "vertical-scroll-distance-detectore",
          "width-detector"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "release",
          "revert"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then yarn; fi",
      "post-merge": "yarn",
      "post-rewrite": "yarn",
      "pre-commit": "yarn tsc && lint-staged"
    }
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "yarn lint",
      "git add"
    ],
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests"
    ]
  },
  "prettier": "@heartly/eslint-config-typescript/dist/prettier"
}
